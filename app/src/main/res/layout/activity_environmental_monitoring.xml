<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnvironmentalMonitoringActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextHeader"
        android:text="Тут проверяется работа различных сенсоров. Датчики температуры, давления и т.д. у меня по большей части отсутвствуют. Картинка вращается как-то странно. При приближении объекта на 2 сантиметра вызывается системный звук уведомлений."/>
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        tools:text="qdqwq"/>
    <TextView
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="qdqwq" />
    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="qdqwq"/>
    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="qdqwq" />
    <TextView
        android:id="@+id/dewpoint"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        tools:text="qdqwq" />

    <ImageView
        android:id="@+id/ivFive"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/five"/>
</LinearLayout>