<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIRST demo activity"
        android:textSize="33sp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<ScrollView
    android:background="@drawable/shape_rounded_container"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/textView3"
    app:layout_constraintLeft_toLeftOf="@id/textView3"
    app:layout_constraintRight_toRightOf="@id/textView3"
    app:layout_constraintBottom_toTopOf="@id/tvBottom"
    >
    <LinearLayout
        android:paddingVertical="10dp"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btnOpenSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open second activity" />

        <Button
            android:id="@+id/btnOpenMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Перемещение к практике"/>

        <Button
            android:id="@+id/btnOpenThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переход к третьему экрану" />
        <Button
            android:id="@+id/btn_open_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переход к упражнению с хранилищем" />
        <Button
            android:id="@+id/btnToFragments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переход к активности с фрагментами"/>
        <Button
            android:id="@+id/btnToRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переход к крутому списку RecyclerView"/>
        <Button
            android:id="@+id/btnToCreateUIInCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тест создания интерфейса из кода"/>
        <Button
            android:id="@+id/btnToThousand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переход к вспылающим окнам"/>
        <Button
            android:id="@+id/btnToNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Уведомления"/>
        <Button
            android:id="@+id/btnToService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Сервисы"/>

        <Button
            android:id="@+id/btnToGetLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Геолокация" />
        <Button
            android:id="@+id/btnToBroadcastReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Широковещательные сообщения"/>
        <Button
            android:id="@+id/btnToInnerService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Встроеные сервисы"/>
        <Button
            android:id="@+id/btnToEnvironmentalMonitoring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Наблюдение за орружающей средой с помощью сенсоров"/>
        <Button
            android:id="@+id/btnToNavGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переход к активности, переходы которой реализованны с графом навигации"/>
        <Button
            android:id="@+id/btnToNavDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Боковая шторка"/>
        <Button
            android:id="@+id/btnToNavigationActivityVarsion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нормальная реализация navigationAPI"/>
        <Button
            android:id="@+id/btnToVectorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Активность с векторным изображением"/>
        <Button
            android:id="@+id/btnToSaveDataInDownloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Активность с тестом сохранений файлов"/>

        <Button
            android:id="@+id/btnToRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Активность с сохранением данных в базу данных при помощи Room"/>

    </LinearLayout>
</ScrollView>

    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На чём я остановился?"
        app:layout_constraintBottom_toTopOf="@id/etOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/etOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Введи в меня что-то"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences|textMultiLine"
        />

    <TextView
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Стартовый экран"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>