<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveDataOnAndroidActivity">

    <TextView
        android:id="@+id/tvForURI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Тут будет путь к папке"
        app:layout_constraintBottom_toTopOf="@id/llForButtons"
        app:layout_constraintLeft_toLeftOf="@id/llForButtons"
        app:layout_constraintRight_toRightOf="@id/llForButtons" />

    <LinearLayout
        android:id="@+id/llForButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnToSaveInDownloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить" />

        <Button
            android:id="@+id/btnToSaveInDownloadsWithLowAPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить с маленьким API"/>

        <Button
            android:id="@+id/btnToCreateJSON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сделать JSON строку" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>